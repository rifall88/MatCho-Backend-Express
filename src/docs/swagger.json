{
  "openapi": "3.0.0",
  "info": {
    "title": "MatCho API",
    "version": "1.0.0",
    "description": "Dokumentasi API untuk website MatCho."
  },
  "servers": [
    {
      "url": "http://localhost:2053",
      "description": "Development Server"
    }
  ],
  "tags": [
    {
      "name": "Users"
    },
    {
      "name": "Products"
    }
  ],
  "paths": {
    "/api/users/register": {
      "post": {
        "tags": ["Users"],
        "summary": "Register new user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": { "type": "string" },
                  "password": { "type": "string" },
                  "displayName": { "type": "string" }
                },
                "required": ["username", "password", "role"]
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Register Success." }
        }
      }
    },
    "/api/users/login": {
      "post": {
        "tags": ["Users"],
        "summary": "Login user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": { "type": "string" },
                  "password": { "type": "string" }
                },
                "required": ["email", "password"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Login Success." }
        }
      }
    },
    "/api/users/all": {
      "get": {
        "tags": ["Users"],
        "summary": "Get all users",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "Ok." }
        }
      }
    },
    "/api/users/by-id/{id}": {
      "get": {
        "tags": ["Users"],
        "summary": "Get user by id",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "responses": {
          "200": { "description": "Ok" }
        }
      },
      "put": {
        "tags": ["Users"],
        "summary": "Update user by id",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "phone": { "type": "string" },
                  "role": { "type": "string", "enum": ["user", "admin"] }
                },
                "required": ["name", "phone"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Ok" }
        }
      },
      "delete": {
        "tags": ["Users"],
        "summary": "Delete user by id",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "responses": {
          "200": { "description": "Ok" }
        }
      }
    },
    "/api/products/": {
      "post": {
        "tags": ["Products"],
        "summary": "Create new product",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "product_name": { "type": "string" },
                  "description": { "type": "string" },
                  "price": { "type": "integer" },
                  "stock": { "type": "integer" },
                  "weight": { "type": "integer" },
                  "image_url": { "type": "string", "format": "binary" },
                  "Is_matcha": { "type": "boolean", "default": true }
                },
                "required": [
                  "product_name",
                  "description",
                  "price",
                  "stock",
                  "weight",
                  "image_url"
                ]
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Created." }
        }
      },
      "get": {
        "tags": ["Products"],
        "summary": "Get all product",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "Ok" }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
